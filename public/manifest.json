{
  "name": "Google Ext x Mesh",
  "description": "Google Ext implementing Mesh Web SDK",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Google Ext x Mesh",
    "default_popup": "index.html",
    "default_icon": {
      "16": "logo192.png",
      "48": "logo192.png",
      "128": "logo192.png"
    }
  },
  "background": {
    "service_worker": "background.bundle.js",
    "type": "module"
},
  "permissions": [
    "activeTab",
    "http://localhost:3000/api/*",
    "https://*.meshconnect.com/*"
  ]
}
